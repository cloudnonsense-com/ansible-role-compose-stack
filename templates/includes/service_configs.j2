{# includes/service_configs.j2 #}
{% if svc_data.configs is defined and svc_data.configs | length > 0 %}
    configs:
{% for config in svc_data.configs %}
      - source: "{{ config.source }}"
        target: "{{ config.target }}"
        uid: "{{ config.uid }}"
        gid: "{{ config.gid }}"
        mode: "{{ config.mode }}"
{% endfor %}
{% endif %}
{# end #}