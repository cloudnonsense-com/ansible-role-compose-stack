    "1.1.1.1",
    "8.8.8.8",
    "194.168.4.100",
    "194.168.8.100"
  ]
  method = "exec"
  count = 1
  ping_interval = 1.0
  timeout = 5.0
  deadline = 10
  binary = "ping"
  ipv6 = false
