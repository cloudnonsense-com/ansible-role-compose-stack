[[inputs.dns_query]]
  servers = ["192.168.1.1"]
  domains = [
    "google.com",
    "hp.com",
    "dell.com",
    "github.com",
    "app.terraform.io",
    "dropbox.com"
  ]
  record_type = "A"
  port = 53
  timeout = 3

[[inputs.http_response]]
  urls = [
    "http://www.google.com",
    "https://hp.com",
    "https://dell.com",
    "https://github.com",
    "https://app.terraform.io",
    "https://dropbox.com"
  ]
  response_timeout = "5s"
  method = "GET"
  follow_redirects = true

