[global_tags]
[agent]
  interval = "10s"
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "10s"
  flush_jitter = "0s"
  precision = ""
  hostname = ""
  omit_hostname = false
  debug = false

[[outputs.influxdb]]
  urls = ["http://{{ stack.name }}-influxdb:8086"]
  database = "{{ compose_stack_config.influxdb.database }}"
  timeout = "60s"
  username = "{{ compose_stack_config.influxdb.admin_user }}"
  password = "{{ compose_stack_config.influxdb.admin_password }}"
  user_agent = "telegraf"
  skip_database_creation = false

